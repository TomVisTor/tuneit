<h2><%= @instrument.name %></h2>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7">
      <%= cl_image_tag @instrument.photo.key, width: 400, height: 300, crop: :fill, class: 'img-show' %>
    </div>
    <div class="col-sm-12 col-md-5">
      <div class="container-reservation">
        <div>
          <div class="table-reservation"> <%# owner info %>
            <div>
              Propriétaire :
            </div>
            <div>
              <%= @instrument.owner.username.capitalize %>
            </div>
          </div>
          <div>
            <div>
              <%= @instrument.owner.address %>
            </div>
          </div>
          <div  class="mt-3 mb-3"> <%# instrument info %>
            <div>
              <%= @instrument.family %>
            </div>
            <div>
              <%= @instrument.description %>
            </div>
          </div>
        </div>
        <div class="table-reservation">
          <div class="mb-3">
            Prix à la journée :
          </div>
          <div>
            <%= @instrument.price_per_day %>€
          </div>
        </div>
        <div>
          <div>
            <%= simple_form_for [@instrument, @reservation] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}, label:"De :"%>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"}, label:"À :"%>
              <%= f.submit 'Réserver',class: 'button' %>
            <% end %>
          </div>
          <div>
            <p data-price-per-day="<%= @instrument.price_per_day %>" id="total-price">Prix Total : ...</p>
          </div>
        </div>
        <!-- <a href="#" class="button">Réserver</a> -->
      </div>
    </div>
  </div>
</div>
