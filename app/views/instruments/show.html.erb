<div class="container container-show">
  <div class="row">
    <div class="col-sm-12 col-md-7">
      <%= cl_image_tag @instrument.photo.key, width: 400, height: 300, crop: :fill, class: 'img-show' %>
    </div>
    <div class="col-sm-12 col-md-5">
      <div class="container-reservation">
        <div> 
          <h3 class="mb-1"><%= @instrument.name.capitalize %></h3>
          <div class="mb-1"> <%# instrument info %>
            <p><%= @instrument.description %></p>
            <span class="family mb-5"><%= @instrument.family %></span>
              <hr>
            <div class="table-reservation">
                Prix à la journée :
                <%= @instrument.price_per_day %>€
            </div>
            <hr>
          </div>

          <div class="table-reservation mt-4"> <%# owner info %>
            <div class="d-flex">
              <%= cl_image_tag @instrument.owner.photo.key, width: 50, height: 50, crop: :fill, class: 'owner-avatar rounded-circle'  %>
              <div class="owner-infos ml-3">
                <%= @instrument.owner.username %><br>
                <span class="owner-address"><%= @instrument.owner.address %></span>
              </div>
            </div>
          </div>
          <hr>
          <div>
            <div>
            </div>
          </div>
        </div>
        <div>
          <div>
            <%= simple_form_for [@instrument, @reservation] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: { class: "datepicker" }, label:"DU"%>
              <%= f.input :end_date, as: :string, required: false, input_html: { class: "datepicker" }, label:"AU"%>
              <div>
                <p data-price-per-day="<%= @instrument.price_per_day %>" id="total-price">Total : ...</p> 
              </div>
              <%= f.submit 'Réserver',class: 'button' %>
            <% end %>
          </div>
        </div>
        <!-- <a href="#" class="button">Réserver</a> -->
      </div>
    </div>
  </div>
</div>
